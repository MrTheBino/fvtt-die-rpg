<form class="custom-dialog">
  <div class="form-group">
    <label class="resource-label">{{label}}:</label>
    <input
      type="hidden"
      name="label"
      value="{{label}}"
      data-dtype="String"
    />
    <input
      type="text"
      name="numDice"
      value="{{numDice}}"
      data-dtype="Number"
    />
  </div>
  <div class="form-group">
    <label class="resource-label">Erfolge ab X+:</label>
    <input
      type="text"
      name="rollDiceFaceSuccess"
      value="{{rollDiceFaceSuccess}}"
      data-dtype="Number"
    />
  </div>
  <div class="form-group">
    <label class="resource-label">Class Die:</label>
    <input
      type="text"
      name="classDie"
      value="{{classDie}}"
      data-dtype="String"
    />
  </div>
  <div class="form-group">
    <label class="resource-label">Difficulty:</label>
    <input
      type="text"
      name="rollDifficulty"
      value="{{rollDifficulty}}"
      data-dtype="Number"
    />
  </div>
  <div class="form-group">
    <label class="resource-label">Advantage / Disadvantage:</label>
    <input
      type="text"
      name="rollAdvantageDisadvantage"
      value="{{rollAdvantageDisadvantage}}"
      data-dtype="Number"
    />
  </div>
  
</form>