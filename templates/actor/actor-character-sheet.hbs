<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100" />
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name" /></h1>
      {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns. --}}
      <div class="resources grid grid-3col">

        {{!-- "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. --}}


        <div class="resource flex-group-center">
          <label for="system.power.value" class="resource-label">Class</label>
          <select name="system.classType" class="resource-content">
            <option value="1" {{#if (eq system.classType 1)}}selected{{/if}}>The Dictator</option>
            <option value="2" {{#if (eq system.classType 2)}}selected{{/if}}>The Godbinder</option>
            <option value="3" {{#if (eq system.classType 3)}}selected{{/if}}>The Neo</option>
            <option value="4" {{#if (eq system.classType 4)}}selected{{/if}}>The Fool</option>
            <option value="5" {{#if (eq system.classType 5)}}selected{{/if}}>The Emotion Knight</option>
            <option value="6" {{#if (eq system.classType 6)}}selected{{/if}}>The Master</option>
          </select>
        </div>

        <div class="resource flex-group-center">
          <label for="system.level" class="resource-label">Level</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.level" value="{{system.level}}" data-dtype="Number" />
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.classDie" class="resource-label">Class Die</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.classDie" value="{{system.classDie}}" data-dtype="String" />
          </div>
        </div>

      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
    <a class="item" data-tab="stats">Stats</a>
    {{#if (eq system.classType 1)}}<a class="item" data-tab="class_the_dictator">The Dictator</a>{{/if}}
    {{#if (eq system.classType 2)}}<a class="item" data-tab="class_the_godbinder">The Godbinder</a>{{/if}}
    {{#if (eq system.classType 3)}}<a class="item" data-tab="class_the_neo">The Neo</a>{{/if}}
    {{#if (eq system.classType 4)}}<a class="item" data-tab="class_the_fool">The Fool</a>{{/if}}
    {{#if (eq system.classType 5)}}<a class="item" data-tab="class_the_emotion_knight">The Emotion Knight</a>{{/if}}
    {{#if (eq system.classType 6)}}<a class="item" data-tab="class_the_master">The Master</a>{{/if}}
    <a class="item" data-tab="features">Features</a>
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="items">Items</a>
    <a class="item" data-tab="spells">Spells</a>
    <a class="item" data-tab="effects">Effects</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Biography Tab --}}
    <div class="tab stats" data-group="primary" data-tab="stats">
      {{> "systems/fvtt-die-rpg/templates/actor/parts/actor-stats.hbs"}}
    </div>

    {{!-- Owned Features Tab --}}
    <div class="tab features" data-group="primary" data-tab="features">
      <section class="grid grid-3col">
        <aside class="sidebar">

          {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
          use both the "grid" and "grid-Ncol" class where "N" can be any number
          from 1 to 12 and will create that number of columns. --}}
          <div class="abilities flexcol">
            {{#each system.abilities as |ability key|}}
            <div class="ability flexrow flex-group-center">
              <label for="system.abilities.{{key}}.value" class="resource-label rollable flexlarge align-left"
                data-roll="d20+@abilities.{{key}}.mod"
                data-label="{{localize (lookup @root.config.abilities key)}}">{{localize (lookup @root.config.abilities
                key)}}</label>
              <input type="text" name="system.abilities.{{key}}.value" value="{{ability.value}}" data-dtype="Number" />
              <span class="ability-mod rollable" data-roll="d20+@abilities.{{key}}.mod"
                data-label="{{localize (lookup @root.config.abilities key)}}">{{numberFormat ability.mod decimals=0
                sign=true}}</span>
            </div>
            {{/each}}
          </div>
        </aside>

        {{!-- For the main features list, span the right two columns --}}
        <section class="main grid-span-2">
          {{!-- This is a Handlebars partial. They're stored in the `/parts` folder next to this sheet, and defined in
          module/helpers/templates.mjs --}}
          {{> "systems/fvtt-die-rpg/templates/actor/parts/actor-features.hbs"}}
        </section>

      </section>
    </div>

    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="description">
      {{!-- Editors must receive enriched text data from getData to properly handle rolls --}}
      {{editor enrichedBiography target="system.biography" engine="prosemirror" button=true editable=editable}}
    </div>

    {{!-- Owned Items Tab --}}
    <div class="tab items" data-group="primary" data-tab="items">
      {{> "systems/fvtt-die-rpg/templates/actor/parts/actor-items.hbs"}}
    </div>

    {{!-- Owned Spells Tab --}}
    <div class="tab spells" data-group="primary" data-tab="spells">
      {{> "systems/fvtt-die-rpg/templates/actor/parts/actor-spells.hbs"}}
    </div>

    {{!-- Active Effects Tab --}}
    <div class="tab effects flexcol" data-group="primary" data-tab="effects">
      {{> "systems/fvtt-die-rpg/templates/actor/parts/actor-effects.hbs"}}
    </div>

    {{#if (eq system.classType 2)}}
    <div class="tab class_the_godbinder flexcol" data-group="primary" data-tab="class_the_godbinder">
      {{> "systems/fvtt-die-rpg/templates/actor/parts/actor-the-godbinder.hbs"}}
    </div>
    {{/if}}

    {{#if (eq system.classType 3)}}
    <div class="tab class_the_godbinder flexcol" data-group="primary" data-tab="class_the_neo">
      {{> "systems/fvtt-die-rpg/templates/actor/parts/actor-the-neo.hbs"}}
    </div>
    {{/if}}

    {{#if (eq system.classType 4)}}
    <div class="tab class_the_godbinder flexcol" data-group="primary" data-tab="class_the_fool">
      {{> "systems/fvtt-die-rpg/templates/actor/parts/actor-the-fool.hbs"}}
    </div>
    {{/if}}

  </section>
</form>