<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100" />
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name" /></h1>
      {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns. --}}
      <div class="resources grid grid-5col">

        {{!-- "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. --}}


        <div class="resource flex-group-center grid-span-2">
          <label for="system.power.value" class="resource-label">Class</label>
          <div class="resource-content flexrow flex-center flex-between">
            <select name="system.classType" class="resource-content">
              <option value="1" {{#if (eq system.classType 1)}}selected{{/if}}>The Dictator</option>
              <option value="2" {{#if (eq system.classType 2)}}selected{{/if}}>The Godbinder</option>
              <option value="3" {{#if (eq system.classType 3)}}selected{{/if}}>The Neo</option>
              <option value="4" {{#if (eq system.classType 4)}}selected{{/if}}>The Fool</option>
              <option value="5" {{#if (eq system.classType 5)}}selected{{/if}}>The Emotion Knight</option>
              <option value="6" {{#if (eq system.classType 6)}}selected{{/if}}>The Master</option>
            </select>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.level" class="resource-label">Level</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.level" value="{{system.level}}" data-dtype="Number" />
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.classDie" class="resource-label">Class Die</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.classDie" value="{{system.classDie}}" data-dtype="String" />
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.level" class="resource-label">Fallen?</label>
          <div class="resource-content flexrow flex-center flex-between align-center">
            <input type="checkbox" name="system.isFallen" data-dtype="Boolean" {{#if system.isFallen}}checked{{/if}} />
          </div>
        </div>

      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
    <a class="item" data-tab="stats">Stats</a>
    {{#if (paragonIsClass system 1)}}<a class="item" data-tab="class_the_dictator">The Dictator</a>{{/if}}
    {{#if (paragonIsClass system 2)}}<a class="item" data-tab="class_the_godbinder">The Godbinder</a>{{/if}}
    {{#if (paragonIsClass system 3)}}<a class="item" data-tab="class_the_neo">The Neo</a>{{/if}}
    {{#if (paragonIsClass system 4)}}<a class="item" data-tab="class_the_fool">The Fool</a>{{/if}}
    {{#if (paragonIsClass system 5)}}<a class="item" data-tab="class_the_emotion_knight">The Emotion Knight</a>{{/if}}
    {{#if (paragonIsClass system 6)}}<a class="item" data-tab="class_the_master">The Master</a>{{/if}}
    <a class="item" data-tab="items">Items</a>
    <a class="item" data-tab="description">Persona</a>
    {{#if (eq system.isFallen true)}}<a class="item" data-tab="class_the_fallen">The Fallen</a>{{/if}}
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Biography Tab --}}
    <div class="tab stats" data-group="primary" data-tab="stats">
      {{> "systems/fvtt-die-rpg/templates/actor/parts/actor-stats.hbs"}}
    </div>


    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="description">
      {{!-- Editors must receive enriched text data from getData to properly handle rolls --}}
      {{editor enrichedBiography target="system.biography" engine="prosemirror" button=true editable=editable}}
    </div>

    {{!-- Owned Items Tab --}}
    <div class="tab items" data-group="primary" data-tab="items">
      {{> "systems/fvtt-die-rpg/templates/actor/parts/actor-items.hbs"}}
    </div>

    {{#if (paragonIsClass system 1)}}
    <div class="tab class_the_dictator flexcol" data-group="primary" data-tab="class_the_dictator">
      {{> "systems/fvtt-die-rpg/templates/actor/parts/actor-the-dictator.hbs"}}
    </div>
    {{/if}}

    {{#if (paragonIsClass system 2)}}
    <div class="tab class_the_godbinder flexcol" data-group="primary" data-tab="class_the_godbinder">
      {{> "systems/fvtt-die-rpg/templates/actor/parts/actor-the-godbinder.hbs"}}
    </div>
    {{/if}}

    {{#if (paragonIsClass system 3)}}
    <div class="tab class_the_neo flexcol" data-group="primary" data-tab="class_the_neo">
      {{> "systems/fvtt-die-rpg/templates/actor/parts/actor-the-neo.hbs"}}
    </div>
    {{/if}}

    {{#if (paragonIsClass system 4)}}
    <div class="tab class_the_fool flexcol" data-group="primary" data-tab="class_the_fool">
      {{> "systems/fvtt-die-rpg/templates/actor/parts/actor-the-fool.hbs"}}
    </div>
    {{/if}}

    {{#if (paragonIsClass system 5)}}
    <div class="tab class_the_emotion_knight flexcol" data-group="primary" data-tab="class_the_emotion_knight">
      {{> "systems/fvtt-die-rpg/templates/actor/parts/actor-the-emotion-knight.hbs"}}
    </div>
    {{/if}}

    {{#if (paragonIsClass system 6)}}
    <div class="tab class_the_master flexcol" data-group="primary" data-tab="class_the_master">
      {{> "systems/fvtt-die-rpg/templates/actor/parts/actor-the-master.hbs"}}
    </div>
    {{/if}}

    {{#if (eq system.isFallen true)}}
    <div class="tab class_the_fallen flexcol" data-group="primary" data-tab="class_the_fallen">
      {{> "systems/fvtt-die-rpg/templates/actor/parts/actor-the-fallen.hbs"}}
    </div>
    {{/if}}
  </section>
</form>